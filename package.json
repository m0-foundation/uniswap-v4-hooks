{
  "name": "@mzero-labs/foundry-template",
  "version": "1.0.0",
  "description": "Template to kickstart a Foundry project",
  "main": "index.js",
  "author": "M^0 Labs <contact@m0.xyz>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MZero-Labs/foundry-template.git"
  },
  "bugs": {
    "url": "https://github.com/MZero-Labs/foundry-template/issues"
  },
  "homepage": "https://github.com/MZero-Labs/foundry-template#readme",
  "scripts": {
    "build": "make -B build",
    "clean": "make -B clean",
    "compile": "forge compile",
    "doc": "forge doc --serve --port 4000",
    "----------DEPLOYMENT-SCRIPTS----------": "",
    "----------Local Deployment Scripts----------": "",
    "deploy-wm-usdc-allowlist-hook-local": "make -B deploy-wm-usdc-allowlist-hook-local",
    "deploy-wm-usdc-allowlist-hook-and-pool-local": "make -B deploy-wm-usdc-allowlist-hook-and-pool-local",
    "deploy-usdc-musd-tick-range-hook-local": "make -B deploy-usdc-musd-tick-range-hook-local",
    "deploy-usdc-musd-tick-range-hook-and-pool-local": "make -B deploy-usdc-musd-tick-range-hook-and-pool-local",
    "----------Ethereum Deployment Scripts----------": "",
    "deploy-wm-usdc-allowlist-hook-and-pool-ethereum": "make -B deploy-wm-usdc-allowlist-hook-and-pool-ethereum",
    "deploy-usdc-musd-tick-range-hook-and-pool-ethereum": "make -B deploy-usdc-musd-tick-range-hook-and-pool-ethereum",
    "----------UNISWAP-POOL-MANAGEMENT-SCRIPTS----------": "",
    "----------Ethereum Pool Management Scripts----------": "",
    "create-liquidity-position-ethereum": "make -B create-liquidity-position-ethereum",
    "flashswap-ethereum": "make -B flashswap-ethereum",
    "swap-ethereum": "make -B swap-ethereum",
    "----------Local Pool Management Scripts----------": "",
    "create-liquidity-position-local": "make -B create-liquidity-position-local",
    "flashswap-local": "make -B flashswap-local",
    "swap-local": "make -B swap-local",
    "----------LINT-COMMANDS----------": "",
    "lint-staged": "lint-staged",
    "prepack": "npm run clean && npm run build",
    "prepare": "husky",
    "prettier": "prettier --write 'script/**/*.sol' 'src/**/*.sol' 'test/**/*.sol'",
    "slither": "forge build --build-info --skip '*/test/**' --skip '*/script/**' --force && slither --compile-force-framework foundry --ignore-compile --config-file slither.config.json --fail-high .",
    "solhint": "solhint -f stylish 'src/**/*.sol'",
    "solhint-fix": "solhint --fix 'src/**/*.sol'",
    "----------TEST-SUITES----------": "",
    "coverage": "make -B coverage",
    "test": "make -B tests",
    "test-gas": "make -B gas-report",
    "test-fuzz": "make -B fuzz",
    "test-integration": "make -B integration",
    "test-invariant": "make -B invariant"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "5.2.0",
    "@openzeppelin/upgrades-core": "1.42.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.2",
    "solhint-plugin-prettier": "^0.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "src/**",
    "out/**"
  ]
}
